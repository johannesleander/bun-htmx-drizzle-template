{
    "scripts": {
        "dev": "bun run --hot src/index.tsx",
        "tailwind:watch": "tailwindcss -i ./src/ui/styles/tailwind.css -o ./src/ui/styles/tailwind.generated.css --watch",
        "db:introspect": "npx drizzle-kit introspect:sqlite --config ./drizzle.config.ts",
        "db:generate": "npx drizzle-kit generate:sqlite --config ./drizzle.config.ts",
        "db:migrate": "bun run src/db/migrate.ts",
        "db:ui": "drizzle-kit studio",
        "db:seed": "bun run src/db/seed.ts"
    },
    "dependencies": {
        "drizzle-kit": "^0.20.14",
        "hono": "^4.0.6"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "drizzle-orm": "^0.29.4",
        "tailwindcss": "latest"
    }
}
